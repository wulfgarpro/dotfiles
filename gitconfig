[core]
	editor = nvim
	pager = delta
[merge]
	tool = meld
	conflictStyle = zdiff3
[diff]
	tool = meld
[difftool]
	prompt = false
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[submodule]
	recurse = true
[init]
	defaultBranch = main
[pull]
	rebase = true
[interactive]
	diffFilter = delta --color-only
[delta]
	navtigate = true
  line-numbers = true
[include]
  path = ~/.config/delta/tokyonight_storm.gitconfig
